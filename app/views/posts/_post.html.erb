<p>
  <strong><%= post.title %>:</strong>
  <%= post.body %>
<br>
<%= link_to 'Show', [post] %> 
<%if current_user.id == post.user_id%>
| <%= link_to 'Edit', edit_post_path(post) %>
| <%= link_to 'Delete', [post],
  method: :delete,
  class: "button is-danger",
  data: { confirm: 'Are you sure?' } %>
<%end%>

</p>