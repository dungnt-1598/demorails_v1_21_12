<p>
  <strong><%= comment.user.email %>:</strong>
  <%= comment.message %>
 <% tags= comment.tags %>
  <% if !tags.empty? %>
  <p>tags:</p>
  <% tags.each do |tag| %>
    <div>        
        #<%= tag.name %>
    </div>
  <% end %>
<% end %>
<br>
<div id="js-like-button-comment-<%=comment.id%>">
  <%= render "comments/like_button_comment", comment: comment %>
</div>

 <%= link_to 'Show', comment %> 
 <%if current_user.id == comment.user_id%>
 | <%= link_to 'Edit', edit_comment_path(comment) %>
 | <%= link_to 'Delete', [comment],
  method: :delete,
  class: "button is-danger",
  data: { confirm: 'Are you sure?' } %> 
 <%end%>
</p>

